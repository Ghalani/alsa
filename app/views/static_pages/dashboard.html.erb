<% if @user.admin? %>
	<h1>Admin panel</h1><br>
<% end %>
<h2>Dashboard</h2>
<hr>
<div class="ui two column divided grid">
	<div class="stretched row">
		<% if @user.admin? %>
			<div class="column">
				<h2>Users in system</h2>
				<% @users.each do |u| %>
					<div class="ui segment">
		        <%= u.email %>
		      </div>					
				<% end %>
				<%= link_to "View users", users_path %>
			</div>
		<% end %>
		<div class="column">			
			<div id="orgs">
				<h3>Organizations you work with</h3>
				<div v-if="organizations.length < 1">
					<h2>You have no organizations</h2>
					<%= link_to "new", new_organization_path %>
				</div>
				<div>		
					<div v-for="osd in organizations" class="card">
            <div class="card-image">
              <img src="images/sample-1.jpg">
              <span class="card-title">Card Title</span>
            </div>
            <div class="card-content">
              <p>{{osd.name}}</p>
            </div>
            <div class="card-action">
              <a :href="'organizations/' + osd.id">Enter</a>
            </div>
          </div>						 
				</div>
				<%= link_to "View all organizations", organizations_path %>

			</div>
		</div>
	</div>
</div>
<%= link_to 'Log out', "/logout" %>
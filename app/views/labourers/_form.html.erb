  <div class="form-group w100p-rounded ">
    <label>Last name</label><br>
    <%= f.text_field :lname %>
  </div>
  <div class="form-group w100p-rounded ">
    <label>Phone</label><br>
    <%= f.text_field :phone %>
  </div>
  <div class="form-group">
    <label>Gender</label><br>
    <%= f.radio_button :gender, :female, checked: @labourer.gender? %> 
    <%= f.label :gender, "Female" %>
    <%= f.radio_button :gender, :male, checked: @labourer.gender? %> 
    <%= f.label :gender, "Male" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class:"btn ripple accent-bg" %>
  </div>
<% end %>

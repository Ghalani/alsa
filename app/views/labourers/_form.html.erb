      <h2><%= pluralize(@labourer.errors.count, "error") %> prohibited this labourer from being saved:</h2>

      <ul>
      <% @labourer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group w100p-rounded ">
    <label>First name</label><br>
    <%= f.text_field :fname %>

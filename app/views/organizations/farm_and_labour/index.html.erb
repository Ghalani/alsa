			<div class="w100p">
					<div class="card raise-1 w100p hcenter">
						<div class="ui column fluid tabular menu mobile only">
							<a class="item menu-item active" name='farmer-item'>Farmers</a>
							<a class="item menu-item" name='farm-item'>Farms</a>
						</div>
						<div id="farmer-item-panel" class="ui active tab">
							<div class="row" style="text-align: right;">
								<span>
									<select id="farmer-filter1" class="rounded-input" hint="Filter by" v-model="searchBy">
										<option v-for="option in searchKeys" v-bind:value="option">
											{{ option }}
										</option>
									</select>
									<input id="farmer-filter2" class="rounded-input" @keyup.enter="farmerFilter">
								</span>
								<hr>
							</div>
							<table-farmer :farmers="filteredFarmers"></table-farmer>					
							<%= link_to new_organization_farmer_path(@organization) do %>
								<div class="fab fab-br raise-3 ripple">
										<i class="ui add icon"></i>
								</div>
							<% end %>
						</div>
						<div id="labourer-item-panel" class="ui tab">
							<div class="">
								<table-labourer :labourers="filteredLabourers"></table-labourer>								
								<%= link_to new_organization_labourer_path(@organization) do %>
									<div class="fab fab-br raise-3 ripple">
										<i class="ui add icon"></i>
								</div>
								<% end %>
							</div>				
						</div>
						<div id="farm-item-panel" class="ui tab">
							<div class="">
								<table-farm :farms="filteredFarms"></table-farm>
								<%= link_to new_organization_farm_path(@organization) do %>
									<div class="fab fab-br raise-3 ripple">
										<i class="ui add icon"></i>
								</div>
								<% end %>
							</div>				
						</div>
					</div>

			</div>
		<!--</div>-->
	</div>
	<%= render "organizations/farm_and_labour/farmer_info_modal" %>
	<%= render "organizations/farm_and_labour/labourer_info_modal" %>
	<%= render "organizations/farm_and_labour/farm_info_modal" %>
</div>

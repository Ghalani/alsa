<div id="farm-labour">
	<%= render "static_pages/nav" %>
	<div class="stat-bar green-bg">
		<div class="ui container padb100">
			<div class="text15">Orgnanization: <%= @organization.name.capitalize %></div><br>
			<div class="text2">Farmer and labour management</div>
		</div>
	</div>
	<div class="top-neg-marg100 ui container">
		<!--<div class="ui centered container grid h400-min">-->
			<!--<div class="three wide column row computer only">
				<div class="card raise-1 w90p">
					<div class="ui vertical fluid tabular menu">
						<a class="item side-menu-item active" name='farmer-item'>
							Farmers
						</a>
						<a class="item side-menu-item" name='farm-item'>
							Farms

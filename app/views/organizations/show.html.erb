<div id="organization-show" >
	<%= render "static_pages/nav" %>
	<div class="stat-bar green-bg">
		<i class="ui content icon"></i>
		<div class="ui container pad-lr">
			<div class="text15"><%= @organization.name %></div>
			<br>
			<div class="ui grid text-center">
				<div class="two wide column">
					<span class="text3"><%= @organization.members.size %></span>
					<p class="text08">User<%= @organization.members.size > 1 ? "s":"" %></p>
					<!--<%= link_to edit_organization_path(@organization, page: "add_users") do %>
						Add users
					<% end %>-->
				</div>			
				<div class="two wide column">
					<span class="text3"><%= @organization.labourers.size %></span>
					<p class="text08">Labourer<%= @organization.labourers.size > 1 ? "s":"" %></p>
				</div>			
				<div class="two wide column">
					<span class="text3"><%= @organization.farmers.size %></span>
					<p class="text08">Farmer<%= @organization.farmers.size > 1 ? "s":"" %></p>
				</div>			
				<div class="two wide column">
					<span class="text3"><%= @organization.members.size %></span>
					<p class="text08">Farm(s)</p>
				</div>						
			</div>
			<br>	
		</div>
	</div>
	<div class="ui container">
		<br>
		<div class="">
			<h4>Modules</h4>
			<hr class="grey-hr1">
		</div>
		<div class="ui grid container">
			<div class="four wide column">
				<div class="card raise-1 card-module hover-raise w200 text-center ripple" data-ripple-color="#c4e5c9">
					<%= image_tag "farmer64.png" %>
					<hr>
					<%= link_to organization_farm_and_labour_path(@organization) do %>
						Farmer and labour
					<% end %>
				</div>
			</div>
			<div class="four wide column">
				<div class="card raise-1 card-module hover-raise w200 text-center ripple" data-ripple-color="#c4e5c9">
					<%= image_tag "earth-globe64.png" %>
					<hr>
					<%= link_to "#" do %>
						Location and Hierarchy
					<% end %>
				</div>
			</div>
			<div class="four wide column">
				<div class="card raise-1 card-module hover-raise w200 text-center ripple" data-ripple-color="#c4e5c9">
					<%= image_tag "users64.png" %>
					<hr>
					<%= link_to organization_user_and_role_path(@organization) do %>
						Users and Roles
					<% end %>
				</div>
			</div>
			<div class="four wide column">
				<div class="card raise-1 card-module hover-raise w200 text-center ripple" data-ripple-color="#c4e5c9">
					<%= image_tag "stock64.png" %>
					<hr>
					<%= link_to "#" do %>
						Stock management
					<% end %>
				</div>
			</div>
		</div>
		
	</div>
</div>
